<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.cleveroad.audiovisualization.GLAudioVisualizationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/aboutUsVisualizer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:av_wavesHeight="70dp"
        app:av_wavesFooterHeight="170dp"
        app:av_wavesCount="7"
        app:av_layersCount="4"
        app:av_backgroundColor="#00032a"
        app:av_wavesColors="@array/rainbow"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/biswajit"
        app:civ_border_color="#ffffff"
        app:civ_border_width="4dp"
        android:id="@+id/circularImageView"
        app:civ_shadow="true"
        app:civ_shadow_radius="12dp"
        app:civ_shadow_color="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circularImageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/developedBy"
        android:textSize="30dp"
        android:text="Developed By"
        android:textColor="#ffffff"
        android:fontFamily="cursive"
        android:shadowColor="#ffffff"
        android:shadowRadius="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/developedBy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        android:text="Biswajit Kongadi"
        android:textColor="#ffffff"
        android:fontFamily="cursive"
        android:shadowColor="#ffffff"
        android:shadowRadius="12"/>


</RelativeLayout>