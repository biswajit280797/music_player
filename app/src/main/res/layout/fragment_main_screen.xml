<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainScreenFragment"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/mainContent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/visibleLayout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/allSongs"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/nowPlayingBottomBar">
            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nowPlayingBottomBar"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:id="@+id/playPauseButton"
                    android:background="@drawable/pause_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="31dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="13dp"
                    android:id="@+id/nowPlayingBarEqualizer"
                    android:background="@drawable/now_playing_bar_eq_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Now Playing"
                    android:layout_toRightOf="@id/nowPlayingBarEqualizer"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#bdbdbd"
                    android:id="@+id/nowPlaying"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/songTitle"
                    android:layout_below="@id/nowPlaying"
                    android:text="..."
                    android:textSize="13dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ffffff"
                    android:layout_alignLeft="@id/nowPlaying"
                    android:ellipsize="end"
                    android:layout_marginTop="3dp"
                    android:maxLines="1"
                    android:maxWidth="160dp"
                    android:singleLine="true"
                    android:layout_alignStart="@id/nowPlaying"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/noSongs"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="You do not have any songs at the moment"
                android:textColor="#000000"/>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>